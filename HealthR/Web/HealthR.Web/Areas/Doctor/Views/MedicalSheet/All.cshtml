@model IEnumerable<DoctorMedicalSheetServiceModel>
@{
    ViewData["Title"] = "Created Medical sheets";
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="well">
    <h2 class="text-left text-primary">@ViewData["Title"]</h2>
    <div data-toggle="modal" data-target="#modal" class="btn btn-primary"> Add new Medical Sheet </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>

                <th class="text-center">
                    Patient name
                </th>
                <th class="text-center">
                    Date and time
                </th>
                <th class="text-center">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td class="text-center">
                        @item.PatientName
                    </td>
                    <td class="text-center">
                        @(item.ExaminationDateAndTime)
                    </td>
                    <td class="text-center">
                        
                          <a class="btn btn-secondary" href="/Doctor/MedicalSheet/New?patientId=@item.Id"> View  </a>
                        
                    </td>

                </tr>
            }


        </tbody>
    </table>
}
else
{
    <h3>No patients!</h3>
}

