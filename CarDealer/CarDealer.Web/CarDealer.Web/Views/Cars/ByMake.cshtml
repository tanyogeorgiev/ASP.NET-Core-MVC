@model CarsByMakeModel

@{
    ViewData["Title"] = "Cars by make";
}


<div class="well">
    <h2 class="text-left text-primary">ALL @Model.Make.ToUpper() CARS</h2>
    <h5 class=" text-info text-success">Filter by make:<span class="text-capitalize"> @Model.Make</span></h5>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th class="text-center">
                Make
            </th>
            <th class="text-center">
                Model
            </th>
            <th class="text-center">
                Travelled Distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td class="text-center">
                    @car.Make
                </td>
                <td class="text-center">
                    @car.Model
                </td>
                <td class="text-center">
                    @(car.TravelledDistance/1000) KM
                </td>
            </tr>
        }
    </tbody>
</table>
