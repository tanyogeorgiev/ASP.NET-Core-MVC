@model CarFormModel

@{
    var pageName = ViewContext.RouteData.Values["action"];
}

<form method="post">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Make">Make</label>
                <input asp-for="Make"  class="form-control" />
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model"  class="form-control" />
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input asp-for="TravelledDistance" min="0" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <fieldset @(pageName.ToString().ToLower() == "edit" ? "disabled" : "")>
                <div class="form-group">
                    <label asp-for="PartId"></label>
                    <select multiple size="20" class ="form-control" asp-for="PartId" asp-items="Model.PartsList"></select>
                    <span asp-validation-for="PartId" class="form-text text-danger"></span>
                </div>
            </fieldset>
        </div>
    </div>

    @{
        if (pageName.ToString() != "delete")
        {
            <div>
              
                        <a href="/cars/parts" class=" btn btn-default">Back</a>
         
                <input class="btn btn-success" type="submit" value="Save Car" />
            </div>
        }

      

    }

</form>