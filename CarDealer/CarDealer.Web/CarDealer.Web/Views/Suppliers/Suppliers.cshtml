@model SuppliersModel
@{
    ViewData["Title"] = $"{@Model.Type} Suppliers";
}


<div class="well">
    <h2 class="text-left text-primary">All @Model.Type Suppliers</h2>
   </div>



<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th class="text-center">
                Id
            </th>
            <th class="text-center">
                Name
            </th>
            <th class="text-center">
                Total parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td class="text-center">
                    @supplier.Id
                </td>
                <td class="text-center">
                    @supplier.Name
                </td>
                <td class="text-center">
                    @supplier.TotalParts
                </td>
            </tr>
        }
    </tbody>
</table>